<script type="text/javascript">
// validates that the field value string has one or more characters in it
function isNotEmpty(elem) {
  var str = elem.value;
    var re = /.+/;
    if(!str.match(re)) {
        alert(elem.name + " cannot be blank.");
        setTimeout("focusElement('" + elem.form.name + "', '" + elem.name + "')", 0);
        return false;
    } else {
        return true;
    }
}

// batch validation router
function validateForm(form) {
    if (isNotEmpty(form.suggestion_topic)) {
		return true;
    }
    return false;
}

</script>

<div class="stk_col_right_header">Suggest Other Stacks</div>
<span>List topics (fitness, health, finances, etc.) you'd like to see comparisons (how much, how many, at what time, etc.) on below.</span><br/>
<%= form_tag "/suggestion", :onsubmit => "return validateForm(this)" do -%>
<%= text_area "suggestion", "topic", :class => "suggestion_topics" %><br/>
<span class="de-em text-75">Enter your email and we'll notify you of any new stacks:</span>
<%= text_field "suggestion", "email",
	:value => session[:email],
	:class => "suggestion_email",
	:onclick => "this.value='';this.style.color = 'black'" %>
<input type="submit" value="Suggest a Stack" style="margin-top: 10px" class="form_button round" />
<% end -%>
